@import './styles/color.wxss';

page {
  font-size: 32rpx;
  background-color: #f6f6f6;
}

/* 盒模型 */
view,
scroll-view,
swiper,
button,
textarea,
label,
navigator,
image {
  box-sizing: border-box;
}

/* 强制换行 */
view,input,textarea {
  word-wrap: break-word;
  word-break:break-all;
}

/* 底部边框 */
.border-bottom::after {
  box-sizing: border-box;
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  border-bottom: 1rpx solid rgba(0, 0, 0, .1);
  transform: scale(.5);
  transform-origin: 0 0;
  pointer-events: none;
}
